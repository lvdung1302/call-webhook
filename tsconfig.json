{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
